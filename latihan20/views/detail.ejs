<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data contact tidak ada. <br><a href="/contact" class="alert-link fw-normal">&laquo; Kembali ke daftar contact</a>.
                </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama; %> </h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp; %> </h6>
                  <p class="card-text"><%= contact.email; %> </p>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">Ubah</a>
                  <!-- <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin ?');">Hapus</a> -->
                  
                  <form action="/contact?_method=DELETE" class="d-inline" method="POST">
                    <input type="hidden" name="nama" value="<%= contact.nama %>">
                    <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin ?');">Hapus</button>
                  </form>

                  <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
                </div>
              </div>
            <% } %> 
        </div>
    </div>
</div>